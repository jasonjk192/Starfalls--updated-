@leviathan_scale = 25

# FRAME
entity = {
	name = "cpoe_01_leviathan_entity"
	pdxmesh = "starfalls_empty_mesh"
	
	locator = { name = "part1" }
	locator = { name = "part2" }
	locator = { name = "part3" }
	
	locator = { name = "main"	position = { 0 0 0 } rotation = { 90 -90 0 } }
	attach = { main = "cpoe_01_leviathan_main_entity" }
	
	default_state = "idle"
	state = { name = "idle" }
	state = { name = "death" }
